  "title": "Celestia App Storage Monitoring",
  "uid": "storage-monitoring",
  "version": 1,
    "panels": [
      {
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "id": 1,
        "title": "Total Data Directory Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(celestia_data_directory_size_bytes)",
            "refId": "A",
            "legendFormat": "Total Size"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 107374182400, "color": "yellow"},
                {"value": 536870912000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "id": 2,
        "title": "Storage Growth Rate (Total)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(sum(celestia_data_directory_size_bytes)[5m])",
            "refId": "A",
            "legendFormat": "Growth Rate (bytes/sec)"
          }
        ],
        "yaxes": [
          {
            "format": "Bps",
            "label": "Bytes per Second"
          },
